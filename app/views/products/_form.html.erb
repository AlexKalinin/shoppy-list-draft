<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :product_name, class: 'awesomplete', data: { list: Product.names } %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :product_description %>
  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.number_field :amount, id: :product_amount %>
  </div>

  <div class="field">
    <%= form.label :unit %>
    <%= form.select :unit, Product.units.keys.to_a, include_blank: 'select unit', id: :product_units %>
  </div>

  <div class="field">
    <%= form.label :color %>
    <%= form.select :color, Product.colors.keys.to_a, include_blank: 'Select color' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
